<div class="ui stackable two column grid">
  <div class="eight wide column">
    <h1>Forgot your password?</h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form'}) do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="field">
      <%= f.button :submit, "Send me reset password instructions", class: 'ui button secondary' %>
    </div>
    <% end %>
    <br>
    <%= render "users/shared/links" %>
  </div>
  <div class="eight wide column">
  </div>
</div>